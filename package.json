{
  "name": "ai-image-generator-desktop",
  "version": "2.0.0",
  "description": "Advanced Desktop Application for AI Image Generation Management",
  "main": "public/electron.js",
  "private": true,
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && python server.py",
    "frontend": "cd frontend && npm start",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run backend\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run build-frontend && npm run build-backend",
    "build-frontend": "cd frontend && npm run build",
    "build-backend": "cd backend && pip install -r requirements.txt",
    "dist": "npm run build && electron-builder",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-linux": "npm run build && electron-builder --linux",
    "postinstall": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "build": {
    "appId": "com.aimanager.desktop",
    "productName": "AI Image Generator Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/electron.js",
      "frontend/build/**/*",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/.env",
      "!backend/venv",
      "!backend/.pytest_cache"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__",
          "!.env",
          "!venv",
          "!.pytest_cache"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "author": {
    "name": "AI Image Generator Team",
    "email": "support@aimanager.com"
  },
  "license": "MIT",
  "keywords": [
    "ai",
    "image-generation",
    "desktop",
    "automation",
    "electron"
  ],
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-updater": "^6.6.2",
    "wait-on": "^8.0.4"
  }
}
